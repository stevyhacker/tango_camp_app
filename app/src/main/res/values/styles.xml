<resources>

    <style name="NewTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/NewActionBar</item>
        <item name="actionBarTabTextStyle">@style/NewActionBarTitleText</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="icon">@drawable/drawerupbutton</item>

        <!--<item name="homeAsUpIndicator">@style/NewActionBarIndicator</item>-->
    </style>

    <!-- ActionBar styles -->
    <style name="NewActionBar" parent="@style/Widget.AppCompat.ActionBar">>
        <item name="background">@color/primary_dark</item>
        <item name="titleTextStyle">@style/NewActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="NewActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="NewActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/primary_text</item>
    </style>


    <style name="NewActionBarIndicator" parent="Theme.AppCompat">
        <item name="homeAsUpIndicator">@drawable/drawerupbutton</item>
    </style>

</resources>
